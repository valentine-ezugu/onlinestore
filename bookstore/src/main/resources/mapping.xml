<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <mapping map-id="userShippingLiteId">
        <class-a>com.bookstore.domain.UserShipping</class-a>
        <class-b>com.bookstore.dto.user.UserForShippingLite</class-b>

    </mapping>

    <mapping map-id="cartItemForList">
        <class-a>com.bookstore.domain.CartItem</class-a>
        <class-b>com.bookstore.dto.cart.CartItemForList</class-b>

    </mapping>

    <mapping map-id="paymentExtraInfo">
        <class-a>com.bookstore.domain.Payment</class-a>
        <class-b>com.bookstore.dto.payment.PaymentExtraInfo</class-b>

    </mapping>

    <mapping map-id="shippingAddressId">
        <class-a>com.bookstore.domain.ShippingAddress</class-a>
        <class-b>com.bookstore.dto.shipping.ShippingAddressInfo</class-b>

    </mapping>

    <mapping map-id="billingAddressCheckout">
        <class-a>com.bookstore.domain.BillingAddress</class-a>
        <class-b>com.bookstore.dto.billingAddress.BillingAddressCheckOut</class-b>

    </mapping>


    <mapping map-id="userForPaymentInfo">
        <class-a>com.bookstore.domain.UserPayment</class-a>
        <class-b>com.bookstore.dto.user.UserForPaymentInfo</class-b>

    </mapping>

</mappings>