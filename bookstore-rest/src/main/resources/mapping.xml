<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <mapping map-id="billingAddressCheckout">
        <class-a>com.valentine.domain.BillingAddress</class-a>
        <class-b>com.valentine.dto.billingAddress.BillingAddressCheckOut</class-b>

    </mapping>

    <mapping map-id="=UserForLogin">
        <class-a>com.valentine.domain.User</class-a>
        <class-b>com.valentine.dto.user.UserForLogin</class-b>

        <field>
            <a>username</a>
            <b>username</b>
        </field>
    </mapping>

    <mapping map-id="bookDetailExtraLite">
        <class-a>com.valentine.domain.Book</class-a>
        <class-b>com.valentine.dto.book.BookDetailExtraLite</class-b>

    </mapping>

    <mapping map-id="bookDetailForList">
        <class-a>com.valentine.domain.Book</class-a>
        <class-b>com.valentine.dto.book.BookDetailForList</class-b>

    </mapping>

    <mapping map-id="bookDetailForShelf">
        <class-a>com.valentine.domain.Book</class-a>
        <class-b>com.valentine.dto.book.BookDetailForShelf</class-b>
    </mapping>

    <mapping map-id="cartItemForList">
        <class-a>com.valentine.domain.CartItem</class-a>
        <class-b>com.valentine.dto.cart.CartItemForList</class-b>

    </mapping>


    <mapping map-id="orderForFindOne">
        <class-a>com.valentine.domain.Order</class-a>
        <class-b>com.valentine.dto.order.OrderForFindOne</class-b>

    </mapping>

    <mapping map-id="paymentExtraInfo">
        <class-a>com.valentine.domain.Payment</class-a>
        <class-b>com.valentine.dto.payment.PaymentExtraInfo</class-b>

    </mapping>

    <mapping map-id="shippingAddressId">
        <class-a>com.valentine.domain.ShippingAddress</class-a>
        <class-b>com.valentine.dto.shipping.ShippingAddressInfo</class-b>

    </mapping>

    <mapping map-id="shoppingCartLite">
        <class-a>com.valentine.domain.ShoppingCart</class-a>
        <class-b>com.valentine.dto.shoppingCart.ShoppingCartLite</class-b>

    </mapping>


    <mapping map-id="userShippingLiteId">
        <class-a>com.valentine.domain.UserShipping</class-a>
        <class-b>com.valentine.dto.user.UserForShippingLite</class-b>

    </mapping>


    <mapping map-id="userForPaymentInfo">
        <class-a>com.valentine.domain.UserPayment</class-a>
        <class-b>com.valentine.dto.user.UserForPaymentInfo</class-b>

    </mapping>

    <mapping map-id="userForProfile">
        <class-a>com.valentine.domain.User</class-a>
        <class-b>com.valentine.dto.user.UserForProfile</class-b>

    </mapping>

    <mapping map-id="userForLogin">
        <class-a>com.valentine.domain.User</class-a>
        <class-b>com.valentine.dto.user.UserForLogin</class-b>

    </mapping>

</mappings>