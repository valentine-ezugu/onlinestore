<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <mapping map-id="bookListDto">
        <class-a>com.adminportal.domain.Book</class-a>
        <class-b>com.adminportal.dto.book.BookDetailForList</class-b>

    </mapping>

    <mapping map-id="bookForSave">
        <class-a>com.adminportal.domain.Book</class-a>
        <class-b>com.adminportal.dto.book.BookForSave</class-b>

    </mapping>

    <mapping map-id="bookDetailLiteId">

        <class-a>com.adminportal.domain.Book</class-a>
        <class-b>com.adminportal.dto.book.BookDetailLite</class-b>

    </mapping>

</mappings>